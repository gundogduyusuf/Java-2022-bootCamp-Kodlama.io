package stringDemo;

public class Main {

	public static void main(String[] args) {

		String mesaj = "Bugün hava çok güzel.";
		System.out.println(mesaj);

		System.out.println("Eleman sayısı=mesaj: " + mesaj.length());
		System.out.println("5. eleman:" + mesaj.charAt(4)); //CharAt()parantez içindeki harfi gösterir
		System.out.println(mesaj.concat( " Yaşasın!")); //Concat()parantez içindeki ibare mesajla birleştirilir
		System.out.println(mesaj.startsWith("A"));
		System.out.println(mesaj.endsWith("."));
		
	}

}
